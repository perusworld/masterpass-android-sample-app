<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mastercard.mymerchant">

    <application
        android:name=".MyMerchantApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ProductsActivity"
            android:label="@string/app_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CheckoutActivity"
            android:label="@string/app_label"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

            <!-- MCO SDK Browser Checkout Functionality, After completing Web process. It will then return to checkout activity with some data -->
            <intent-filter>
                <data android:scheme="merchant" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CompleteActivity"
            android:label="@string/app_label"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/app_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ManageShippingAddressesActivity"
            android:label="@string/app_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ModifyShippingAddressActivity"
            android:label="@string/app_label"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ExitActivity"
            android:label="@string/app_label"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="AA_MODELS"
            android:value="com.mastercard.mymerchant.model.DbAddressModel" />

        <activity
            android:name=".activity.ConduitActivity"
            android:label="@string/title_activity_conduit"
            android:theme="@style/AppTheme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="payment"
                    android:scheme="mymerchant" />
            </intent-filter>
        </activity>
    </application>

</manifest>